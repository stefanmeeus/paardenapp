{
  "version": 2,
  "public": true,
  "builds": [
    { "src": "public/**/*", "use": "@vercel/static" }
  ],
  "routes": [
    { "src": "^/app(?:/.*)?$", "dest": "/app/index.html" },
    { "src": "^/admin(?:/.*)?$", "dest": "/admin/admin.html" },
    { "src": "^/auth(?:/.*)?$", "dest": "/auth/login.html" },
    { "src": "^/(.*)$", "dest": "/public/$1" }
  ]
}
